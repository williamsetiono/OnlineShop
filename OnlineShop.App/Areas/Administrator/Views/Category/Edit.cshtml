@model OnlineShop.Core.Models.Categories.CategoryViewModel
@{
    ViewBag.Title = "Edit";
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Update Category
            </div>
            <div class="panel-body">
                <div class="row">
                    @using (Html.BeginForm("Edit", "Category", null, FormMethod.Post, new Dictionary<string, object>() { { "role", "form" } }))
                    {
                        @Html.HiddenFor(a=>a.Id)
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="col-md-3">
                                    @Html.LabelFor(a => a.CategoryName)
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBoxFor(a => a.CategoryName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="col-md-3">
                                    @Html.LabelFor(a => a.ParentId)
                                </div>
                                <div class="col-md-6">
                                    @Html.DropDownListFor(a => a.ParentId, new SelectList(Model.DictionaryCategory, "Key", "Value", "-1"), new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="col-md-offset-4 col-md-4">
                            <label>
                                <input class="btn btn-primary" type="submit" value="Submit" />
                            </label>
                            <label>
                                <a class="btn btn-default" href="@Url.Action("Index","Category")"> Back </a>
                            </label>
                        </div>
                        <div class="clearfix"></div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>