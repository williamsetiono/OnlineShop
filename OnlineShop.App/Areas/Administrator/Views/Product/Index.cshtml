@{
    ViewBag.Title = "Manage Product";
    var currencySign = ViewBag.currencySign;
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Create", "Create", "Product", new { @class = "btn btn-primary" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-product">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Status</th>
                                <th>Description</th>
                                <th>Category</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scriptHeaders{
    <script>
        $('#dataTables-product').DataTable(
            {
            "sAjaxSource": "@Url.Action("GetAll", "Product")",
            "bProcessing": true,
            "bStateSave": false,
            "bServerSide": true,
            "sServerMethod": "POST",
            "bSortCellsTop": false,
            "iDisplayLength": 50,
            "sDom": "Rlfrtip",
            "bFilter": true,
            "aaSorting": [],
            "aoColumns": [ 
                {
                    "mData": "ProductName",
                    "bSortable": true,
                    "bSearchable": true,
                }, {
                    "mData": "Quantity",
                    "bSortable": true,
                    "bSearchable": true,
                },{
                    "mData": "Price",
                    "bSortable": true,
                    "bSearchable": true,
                    "fnCreatedCell": onCreatepriceCell,
                }, {
                    "mData": "Status",
                    "bSortable": false,
                    "bSearchable": false,
                }, {
                    "mData": "Description",
                    "bSortable": false,
                    "bSearchable": false,
                }, {
                    "mData": "Category",
                    "bSortable": false,
                    "bSearchable": false,
                },  {
                    "mData": null,
                    "bSortable": false,
                    "bSearchable": false,
                    "fnCreatedCell": onCreateActionCell,
                }
            ],
            "oColReorder": {
                "iFixedColumns": 1
            },
            "fnRowCallback": dataTableRowCallback,
            "fnDrawCallback": dataTableDrawCallback
        });

        function dataTableRowCallback(e, x) {
        }
        function dataTableDrawCallback(e, x) {
        }

        function onCreateActionCell(nTd, sData, oData, iRow, iCol) {
            var html = '<a href="/Administrator/Product/Edit/' + oData.Id + '"> Edit </a>';
             $(nTd).html(html);
        } function onCreatepriceCell(nTd, sData, oData, iRow, iCol) {
            var html = '@currencySign' + oData.Price;
             $(nTd).html(html);
        }
    </script>
}