@using OnlineShop.Core.Resources
@model OnlineShop.Core.Models.Users.UserLoginViewModel

@using (Html.BeginForm("SignIn", "Account", FormMethod.Post, new { }))
{
    @Html.AntiForgeryToken()
    <div>
    @Html.TextBoxFor(a => a.UserName, new { @placeholder = "Name" })
     @Html.ValidationMessageFor(model => model.UserName,null,new {@class="text-danger"} )
    </div>
    <div>
        @Html.PasswordFor(a => a.Password, new { @placeholder = "Password" })
        @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })
    </div>
    <span>
        @Html.CheckBoxFor(a => a.Remember) @Resource.LabelRememberMe
    </span>
    <button type="submit" class="btn btn-default">@Resource.Login</button>
}

