@model OnlineShop.Core.Models.Users.UserInfoViewModel
@{
    ViewBag.Title = "Profile";
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Edit Setting
            </div>
            <div class="panel-body">
                <div class="row">
                    @using (Html.BeginForm("Profile", "User", null, FormMethod.Post, new Dictionary<string, object>() { { "role", "form" } }))
                    {
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    @Html.LabelFor(a => a.UserName)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(a => a.UserName, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                                <div class="col-md-2">
                                    @Html.LabelFor(a => a.FullName)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(a => a.FullName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    @Html.LabelFor(a => a.Email)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(a => a.Email, new { @class = "form-control" })
                                </div>
                                <div class="col-md-2">
                                    @Html.LabelFor(a => a.Phone)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(a => a.Phone, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    @Html.LabelFor(a => a.Address)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(a => a.Address, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="col-md-offset-4 col-md-4">
                            <label>
                                <input class="btn btn-primary" type="submit" value="Submit" />
                            </label>
                            <label>
                                <a class="btn btn-default margin-top-15 " href="@Url.Action("Index","Home")"> Back </a>
                            </label>
                        </div>
                        <div class="clearfix"></div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>