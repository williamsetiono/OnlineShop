
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Create", "Create", "Coupon", new { @class = "btn btn-primary" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-coupons">
                        <thead>
                            <tr>
                                <th>Key</th>
                                <th>Discount</th>
                                <th>Status</th>
                                <th>Active date</th>
                                <th>Expiry date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scriptHeaders{
    <script>
        $('#dataTables-coupons').DataTable(
            {
            "sAjaxSource": "@Url.Action("GetAll", "Coupon")",
            "bProcessing": false,
            "bStateSave": false,
            "bServerSide": true,
            "sServerMethod": "POST",
            "bSortCellsTop": false,
            "iDisplayLength": 50,
            "sDom": "Rlfrtip",
            "bFilter": true,
            "aaSorting": [],
            "aoColumns": [
                {
                    "mData": "Id",
                    "bSortable": true,
                    "bSearchable": true,
                }, {
                    "mData": "Discount",
                    "bSortable": true,
                    "bSearchable": true,
                },{
                    "mData": "StrStatus",
                    "bSortable": true,
                    "bSearchable": true,
                },{
                    "mData": "StrStartDate",
                    "bSortable": false,
                    "bSearchable": false,
                }, {
                    "mData": "StrEndDate",
                    "bSortable": false,
                    "bSearchable": false,
                }, {
                    "mData": null,
                    "bSortable": false,
                    "bSearchable": false,
                    "fnCreatedCell": onCreateActionCell,
                }
            ],
            "oColReorder": {
                "iFixedColumns": 1
            },

            "fnRowCallback": dataTableRowCallback,
            "fnDrawCallback": dataTableDrawCallback
        });

        function dataTableRowCallback(e, x) {
        }
        function dataTableDrawCallback(e, x) {
        }

        function onCreateActionCell(nTd, sData, oData, iRow, iCol) {
            var html = '<a href="/Administrator/Coupon/Edit/' + oData.Id + '"> Edit </a>';
             $(nTd).html(html);
        }
       
    </script>
}