@{
    ViewBag.Title = "Manage Setting";
}
<div class="row">
    <div class="col-lg-12 ">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Create", "Create", "Setting", new { @class = "btn btn-primary" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover width-100" id="dataTables-setting">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Value</th>
                                <th>Type</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scriptHeaders{
    <script>
        $('#dataTables-setting').DataTable(
            {
            "sAjaxSource": "@Url.Action("GetAll", "Setting")",
            "bProcessing": false,
            "bStateSave": false,
            "bServerSide": true,
            "sServerMethod": "POST",
            "bSortCellsTop": false,
            "iDisplayLength": 50,
            "sDom": "Rlfrtip",
            "bFilter": true,
            "aaSorting": [],
            "aoColumns": [
                {
                    "mData": "Id",
                    "bSortable": true,
                    "bSearchable": true,
                },{
                    "mData": "Value",
                    "bSortable": true,
                    "bSearchable": true,
                }, {
                    "mData": "Type",
                    "bSortable": true,
                    "bSearchable": true,
                }, {
                    "mData": null,
                    "bSortable": false,
                    "bSearchable": false,
                    "fnCreatedCell": onCreateActionCell,
                }
            ],
            "oColReorder": {
                "iFixedColumns": 1
            },

            "fnRowCallback": dataTableRowCallback,
            "fnDrawCallback": dataTableDrawCallback
        });

        function dataTableRowCallback(e, x) {
        }
        function dataTableDrawCallback(e, x) {
        }

        function onCreateActionCell(nTd, sData, oData, iRow, iCol) {
            var html = '<a href="/Administrator/Setting/Edit/' + oData.Id + '"> Edit </a>';
             $(nTd).html(html);
        }
    </script>
}