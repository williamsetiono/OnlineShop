@using OnlineShop.Core.Resources
@model OnlineShop.Core.Models.Orders.OrderDetailViewModel
@{
    ViewBag.Title = "Order detail";
    var currencySign = ViewBag.currencySign;
    
}
<div class="features_items">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <td>@Resource.HeaderProduct</td>
                <td>@Resource.HeaderDescription</td>
                <td>@Resource.HeaderQuantity</td>
                <td>@Resource.HeaderPrice</td>
                <td>@Resource.HeaderTotal</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Description</td>
                    <td>@item.Quantity</td>
                    <td>@currencySign  @item.Price</td>
                    <td>@currencySign  @item.Total</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td>@Resource.HeaderTotal</td>
                <td colspan="4" class="text-right">@currencySign @Model.Items.Sum(a => a.Total)</td>
              
        </tr>
    </tfoot>
</table>
</div>