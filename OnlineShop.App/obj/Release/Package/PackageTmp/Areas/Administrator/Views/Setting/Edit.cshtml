@model OnlineShop.Core.Models.Settings.SettingVIewModel
@{
    ViewBag.Title = "Edit";
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Edit Setting
            </div>
            <div class="panel-body">
                <div class="row">
                    @using (Html.BeginForm("Edit", "Setting", null, FormMethod.Post, new Dictionary<string, object>() { { "role", "form" }, { "enctype", "multipart/form-data" } }))
                    {
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    @Html.LabelFor(a => a.Id)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(a => a.Id, new { @class = "form-control",@readonly ="readonly" })
                                    @Html.ValidationMessageFor(a => a.Id,null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    @Html.LabelFor(a => a.Value)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(a => a.Value, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(a => a.Value, null, new { @class = "text-danger" })
                                </div>
                                <div class="col-md-2">
                                    @Html.LabelFor(a => a.Type)
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(a => a.Type, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(a => a.Type, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="col-md-offset-4 col-md-4">
                            <label>
                                <input class="btn btn-primary" type="submit" value="Submit" />
                            </label>
                            <label>
                                <a class="btn btn-default" href="@Url.Action("Index","Setting")"> Back </a>
                            </label>
                        </div>
                        <div class="clearfix"></div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>