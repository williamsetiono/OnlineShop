
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Create", "Create", "Users", new { @class = "btn btn-primary" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-users">
                        <thead>
                            <tr>
                                <th>UserName</th>
                                <th>FullName</th>
                                <th>Address</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Status</th>
                                <th>Role</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scriptHeaders{
    <script>
        $('#dataTables-users').DataTable(
            {
            "sAjaxSource": "@Url.Action("GetAll", "Users")",
            "bProcessing": false,
            "bStateSave": false,
            "bServerSide": true,
            "sServerMethod": "POST",
            "bSortCellsTop": false,
            "iDisplayLength": 50,
            "sDom": "Rlfrtip",
            "bFilter": true,
            "aaSorting": [],
            "aoColumns": [
                {
                    "mData": "UserName",
                    "bSortable": true,
                    "bSearchable": true,
                }, {
                    "mData": "FullName",
                    "bSortable": true,
                    "bSearchable": true,
                }, {
                    "mData": "Address",
                    "bSortable": true,
                    "bSearchable": true,
                },{
                    "mData": "Phone",
                    "bSortable": true,
                    "bSearchable": true,
                },{
                    "mData": "Email",
                    "bSortable": false,
                    "bSearchable": false,
                }, {
                    "mData": "Status",
                    "bSortable": false,
                    "bSearchable": false,
                }, {
                    "mData": "Role",
                    "bSortable": false,
                    "bSearchable": false,
                },  {
                    "mData": null,
                    "bSortable": false,
                    "bSearchable": false,
                    "fnCreatedCell": onCreateActionCell,
                }
            ],
            "oColReorder": {
                "iFixedColumns": 1
            },

            "fnRowCallback": dataTableRowCallback,
            "fnDrawCallback": dataTableDrawCallback
        });

        function dataTableRowCallback(e, x) {
        }
        function dataTableDrawCallback(e, x) {
        }

        function onCreateActionCell(nTd, sData, oData, iRow, iCol) {
            var html = '<a href="/Administrator/Users/Edit/' + oData.Id + '"> Edit </a>';
             $(nTd).html(html);
        }
    </script>
}